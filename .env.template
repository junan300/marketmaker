# Solana Market Maker Configuration
# Copy this file to .env and fill in your values

# Network
SOLANA_NETWORK=devnet
RPC_URL=https://api.devnet.solana.com

# Security - CHANGE the passphrase!
MM_KEYSTORE_PASSPHRASE=change-this-in-production
MM_API_KEY=
MM_ALLOW_LOCALHOST=true
MM_BIND_HOST=127.0.0.1

# Token to Trade (REQUIRED to start via v1 UI)
TOKEN_MINT=

# Trading Parameters
BASE_TRADE_SIZE_SOL=0.1
STRONG_SIGNAL_MULTIPLIER=2.0
MIN_TRADE_SIZE_SOL=0.01
MAX_TRADE_SIZE_SOL=1.0
STOP_LOSS_PERCENT=10.0
MAX_SLIPPAGE_PERCENT=2.0
MIN_CONFIDENCE=0.5
CYCLE_INTERVAL_S=15

# Server
MM_PORT=8000
